{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "sort-imports": "off",
    "import/order": ["error", {
      "pathGroups": [
        {
          "pattern": "@/**/*",
          "group": "external",
          "position": "after"
        },
        {
          "pattern": "./**/*",
          "group": "external",
          "position": "after"
        }
      ],
      "alphabetize": {
        "order": "asc"
      },
      "newlines-between": "always"
    }]
  }
}
